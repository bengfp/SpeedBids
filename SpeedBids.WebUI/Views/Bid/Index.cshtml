@model BidViewModel

<div class="container mt-2">
    <div class="row">
        <div class="col-md-8 p-5">
            <!-- Left column content -->
            <img src=@Model.ProductImage alt="Product Image" class="img-fluid">
            <div class="d-flex mt-2">
                <button onclick="javascript:history.back();" class="btn btn-primary">Go Back</button>
            </div>
            <table class="table table-bordered mt-3">
                <tbody>
                    <tr>
                        <td>Car Make</td>
                        <td>@Model.CarMake</td>
                    </tr>
                    <tr>
                        <td>Car Model</td>
                        <td>@Model.CarModel</td>
                    </tr>
                    <tr>
                        <td>Car Type</td>
                        <td>@Model.CarType</td>
                    </tr>
                    <tr>
                        <td>Year Model</td>
                        <td>@Model.YearModel</td>
                    </tr>
                    <tr>
                        <td>Color</td>
                        <td>@Model.Color</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-4 mt-5">
            <!-- Right column content -->

            <table class="table table-bordered">
                <tbody>
                    <tr class="table-success">
                        <th colspan="2">Bidding Information:</th>
                    </tr>
                    <tr>
                        <td>Bid Status</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Current Bidding</td>
                        <td></td>
                    </tr>
                    <tr class="center-row">
                        <td colspan="2" class="p-4">
                            <p>Your Bid:</p>
                            <div class="input-group justify-content-center">
                                <span class="input-group-text">$</span>
                                <input type="text" class="form-control text-right col-12">
                            </div>
                            <div class="d-flex justify-content-center mt-4">
                                <button class="btn btn-primary w-75">Place Bid</button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <table class="table table-bordered">
                            <tbody>
                                <tr class="table-success">
                                    <th colspan="2">Want it now?</th>
                                </tr>
                                <tr class="center-row">
                                    <td colspan="2" class="p-4">
                                        <div class="d-flex justify-content-between mx-5 mb-4">
                                            <span>Minimum Bid:</span>
                                            <span>$@Model.ProductPrice</span>
                                        </div>
                                        <div class="d-flex justify-content-center">
                                            <button class="btn btn-primary mx-3">Make Offer</button>
                                            <button class="btn btn-primary mx-3">Buy Now</button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>