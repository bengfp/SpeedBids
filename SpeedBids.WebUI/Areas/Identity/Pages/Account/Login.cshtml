@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="modal-fade" id="loginModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="padding: 50px;">
            <div class="modal-header border-bottom-0 justify-content-center">
                <h4>Login</h4>
            </div>
            <div class="modal-body">

                <form id="account" method="post">
                    <div class="form-inputs mb-3">
                        @*<label for="emailTxtBox" class="form-label">Email Address</label>*@
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" id="emailTxtBox" placeholder="Email Address" />
                        <span asp-validation-for="Input.Email" class="invalid-feedback"></span>
                    </div>

                    <div class="form-inputs mb-3">
                        @*<label for="passwordTxtBox" class="form-label">Password</label>*@
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" id="passwordTxtBox" placeholder="Password" />
                        <span asp-validation-for="Input.Password" class="invalid-feedback"></span>
                    </div>
                    <div class="row mb-4">
                        <div class="col d-flex">
                            <div class="form-check">
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <div class="container">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <div class="row">
                            <p>Not a member? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Create an account.</a></p>
                        </div>
                        <div class="row">
                            <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>